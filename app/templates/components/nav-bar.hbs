<div class="container-fluid">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav nav-programs">
      <div class="programs-header">
        <div class="programs-label">Our Ministries</div>
        <div class="ribbons">
          <div class="ribbon-main ribbon"></div>
          <div class="ribbons-small">
            {{#each programSections as |section|}}<!--
              -->{{link-to '' 'section' section class="ribbon ribbon-small" classNameBindings="section.ribbonClass"}}<!--
            -->{{/each}}
          </div>
        </div>
      </div>
      {{#each programSections as |section|}}
        <li class="dropdown">
          {{#link-to 'section' section}}{{{section.titleBreak}}}{{/link-to}}
          <div class="dropdown-menu" role="menu">
            <div class="inner">
              <div class="main">
                <img class="section-icon" src="{{section.icon.url}}"/><!--
                -->{{#if section.pages}}<div class="page-links">
                  {{#each section.pages as |page|}}
                    {{#if page.hasLink}}
                      {{view 'entry-link' entry=page.link title=page.title goTo="goTo" class="page-link"}}
                    {{else}}
                      {{link-to page.title 'page' section page class="page-link"}}
                    {{/if}}
                  {{/each}}
                </div>{{/if}}
              </div>
              <div class="divider"></div>
              <div class="description">{{section.description}}</div>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
    <ul class="nav navbar-nav navbar-right">
      {{#each otherSections as |section|}}
        <li class="dropdown">
          {{#link-to 'section' section}}{{{section.titleBreak}}}{{/link-to}}
          <div class="dropdown-menu" role="menu">
            <div class="inner">
            {{#each section.pages as |page|}}
              {{#if page.hasLink}}
                {{view 'entry-link' entry=page.link title=page.title goTo="goTo" class="page-link"}}
              {{else}}
                {{link-to page.title 'page' section page class="page-link"}}
              {{/if}}
            {{/each}}
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
  </div><!-- /.navbar-collapse -->
</div><!-- /.container-fluid -->
