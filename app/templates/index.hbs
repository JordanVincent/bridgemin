  <h1>Homepage</h1>
</div>

<div class="row">
  <div class="col-sm-4">
    <div class="panel panel-default">
      <div class="panel-heading">{{homeBox1Fragment.title}}</div>
      <div class="panel-body">
        {{markdown-to-html markdown=homeBox1Fragment.body}}
        <button class="btn btn-primary">{{homeBox1Fragment.linkText}}</button>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="panel panel-default">
      <div class="panel-body">
        Spiritual Care
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="panel panel-default">
      <div class="panel-body">
        Guardianship
      </div>
    </div>
  </div>
</div>

