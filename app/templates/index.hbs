{{site-header programSections=sortedProgramSections otherSections=sortedOtherSections link1Fragment=headerLink1Fragment link2Fragment=headerLink2Fragment buttonFragment=headerButtonFragment goTo="goTo"}}

<div id="index">
  <div class="head">
    <div class="container">
      {{#background-image image=homeHeroFragment.image class="hero"}}
        <h1>{{homeHeroFragment.title}}</h1>
        <div class="inner">
          <div class="text">{{{homeHeroFragment.bodyHTML}}}</div>
          {{view 'fragment-link' fragment=homeHeroFragment goTo="goTo" class="center-block"}}
        </div>
      {{/background-image}}
    </div>
    <div class="ribbons">
      <div class="ribbon ribbon-red"></div>
      <div class="ribbon ribbon-yellow"></div>
      <div class="ribbon ribbon-blue"></div>
    </div>
  </div>

  <div class="body">
    <div class="container">
      <div class="row">
        <div class="col-sm-4">
          <div class="panel panel-box">
            <div class="panel-heading">{{homeBox1Fragment.title}}</div>
            <div class="panel-ribbon"><div class="ribbon ribbon-red"></div></div>
            <div class="panel-body">
              {{background-image image=homeBox1Fragment.image}}
              <div class="inner">
                <div class="text">{{{homeBox1Fragment.bodyHTML}}}</div>
                {{view 'fragment-link' fragment=homeBox1Fragment goTo="goTo" class="center-block"}}
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="panel panel-box">
            <div class="panel-heading">{{homeBox2Fragment.title}}</div>
            <div class="panel-ribbon"><div class="ribbon ribbon-yellow"></div></div>
            <div class="panel-body">
              {{background-image image=homeBox2Fragment.image}}
              <div class="inner">
                <div class="text">{{{homeBox2Fragment.bodyHTML}}}</div>
                {{view 'fragment-link' fragment=homeBox2Fragment goTo="goTo" class="center-block"}}
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="panel panel-box">
            <div class="panel-heading">{{homeBox3Fragment.title}}</div>
            <div class="panel-ribbon"><div class="ribbon ribbon-blue"></div></div>
            <div class="panel-body">
              {{background-image image=homeBox3Fragment.image}}
              <div class="inner">
                <div class="text">{{{homeBox3Fragment.bodyHTML}}}</div>
                {{view 'fragment-link' fragment=homeBox3Fragment goTo="goTo" class="center-block"}}
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4">
          <div class="panel panel-box panel-event">
            <div class="panel-heading">Upcoming Event</div>
            <ul class="panel-body">
              {{background-image image=upcomingEvent.image}}
              <div class="inner">
                <div class="truncated-text">
                  {{view 'entry-link' entry=upcomingEvent.link title=upcomingEvent.title goTo="goTo" tagName="h4"}}
                  <div class="date">{{moment upcomingEvent.date 'MMMM Do, YYYY'}}</div>
                  <div class="text">{{{upcomingEvent.bodyHTML}}}</div>
                  {{view 'fragment-link' fragment=upcomingEvent goTo="goTo" isLink=true}}
                </div>
              </div>
            </ul>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="panel panel-box panel-story">
            <div class="panel-heading">{{recentStory.type}}</div>
            <div class="panel-body">
              {{background-image image=recentStory.image}}
              <div class="inner">
                <div class="truncated-text">
                  {{view 'entry-link' entry=recentStory.link title=recentStory.title goTo="goTo" tagName="h4"}}
                  <div class="text">{{{recentStory.bodyHTML}}}</div>
                  {{view 'fragment-link' fragment=recentStory goTo="goTo" isLink=true}}
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="panel panel-box">
            <div class="panel-heading">Bridge News</div>
            <div class="panel-body">
              <div class="inner">
                {{#each recentNews as |news|}}
                  <div class="news truncated-text">
                    {{view 'entry-link' entry=news.link title=news.title goTo="goTo" tagName="h4"}}
                    <div class="date">Posted on {{moment news.createdAt 'MMMM Do, YYYY'}}</div>
                    <div class="text">{{{news.bodyHTML}}}</div>
                    {{view 'fragment-link' fragment=news goTo="goTo" isLink=true}}
                  </div>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{site-footer box1Fragment=footerBox1Fragment box2Fragment=footerBox2Fragment box3Fragment=footerBox3Fragment}}